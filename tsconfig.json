{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"target": "esnext",
		"newLine": "lf",
		"sourceMap": false
	},
	"include": ["./src/**/*"],
	"typeAcquisition": {
        "enable": true
    }
}